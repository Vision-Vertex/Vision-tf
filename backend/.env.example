# ===========================================
# Vision-TF Backend Environment Configuration
# ===========================================
# Copy this file to .env and update the values for your environment

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://your_db_user:your_db_password@your_db_host:port/your_db_name

# Database connection details (for Docker setup)
DB_HOST=your_db_host
DB_PORT=your_port
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=time_for_expiration_access
JWT_REFRESH_EXPIRES_IN=time_for_expiration_refresh

# ===========================================
# RabbitMQ Configuration
# ===========================================
RABBITMQ_URL=amqp://your_rabbitmq_user:your_rabbitmq_password@your_rabbitmq_host:port
RABBITMQ_HOST=your_rabbitmq_host
RABBITMQ_PORT=your_rabbitmq_port
RABBITMQ_USER=your_rabbitmq_user
RABBITMQ_PASS=your_rabbitmq_password

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
PORT=port
FRONTEND_URL=http://localhost:port

# ===========================================
# Email Configuration (for email verification, password reset, etc.)
# ===========================================
# SMTP Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=your_smtp_port
SMTP_USER=your_email_address
SMTP_PASS=your_email_password
SMTP_FROM=your_from_email_address

# Email verification settings
EMAIL_VERIFICATION_EXPIRES=verification_expiration
PASSWORD_RESET_EXPIRES=reset_expiration

# ===========================================
# Security Configuration
# ===========================================
# Rate limiting
RATE_LIMIT_TTL=limit_ttl
RATE_LIMIT_LIMIT=limit

# Session management
SESSION_SECRET=your_session_secret_key
MAX_SESSIONS_PER_USER=your_max_session_per_user
SESSION_EXPIRES=your_session_time_limit
REMEMBER_ME_EXPIRES=your_remember_me_time_limit
SESSION_CLEANUP_INTERVAL=your_session_invalidation_interval
SESSION_EXTENSION_THRESHOLD=your_session_extension_treshold

# Account lockout
MAX_LOGIN_ATTEMPTS=maximum_login_attempts_allowed
LOCKOUT_DURATION=duration_after_maximum_login_attempts

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# API Configuration
# ===========================================
API_PREFIX=v1
API_TITLE=Vision-TF Authentication API
API_DESCRIPTION=Complete authentication system with advanced security features
API_VERSION=1.0.0

# ===========================================
# Health Check Configuration
# ===========================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# ===========================================
# Development/Testing Configuration
# ===========================================
# Set to true to enable detailed logging
DEBUG=false

# Test database (for running tests)
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:port/vision_tf_test

# ===========================================
# Production Overrides (uncomment for production)
# ===========================================
# NODE_ENV=production
# JWT_SECRET=your_actual_production_secret_key
# SMTP_HOST=your_production_smtp_host
# SMTP_USER=your_production_email
# SMTP_PASS=your_production_password
